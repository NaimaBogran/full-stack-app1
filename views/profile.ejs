<!doctype html>
<html>
<head>
  <title>Interview Prep Hub</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="profile-body">
  <header class="hub-header">
    <h1>Interview Prep Hub</h1>
    <div class="user-info">
      <span class="user-email"><%= user.local.email %></span>
      <a href="/logout" class="btn btn-outline btn-sm">Logout</a>
    </div>
  </header>

  <main class="hub-main container">
    <section class="intro">
      <h2>Welcome back!</h2>
      <p>Post a question, share your practice answers, or react to othersâ€™ posts. Support your peers and level up your interview skills.</p>
    </section>

    <section class="messages-board">
      <h3>Community Board</h3>
      <ul class="messages-list">
        <% for (var i = 0; i < messages.length; i++) { %>
          <li class="message-card">
            <div class="message-header">
              <strong><%= messages[i].name %></strong>
            </div>
            <p class="message-body"><%= messages[i].msg %></p>
            <div class="message-actions">
              <span class="thumb-count"><%= messages[i].thumbUp %></span>
              <i class="fa fa-thumbs-up"></i>
              <i class="fa fa-thumbs-down"></i>
              <i class="fa fa-trash"></i>
            </div>
          </li>
        <% } %>
      </ul>
    </section>

    <section class="add-message">
      <h3>Share a Question or Answer</h3>
      <form action="/messages" method="POST" class="message-form">
        <input type="text" name="name" value="<%= user.local.email %>" readonly>
        <textarea name="msg" placeholder="Share a practice question, or write your CAR answer..."></textarea>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
    </section>
  </main>

  <script src="/main.js"></script>
</body>
</html>
